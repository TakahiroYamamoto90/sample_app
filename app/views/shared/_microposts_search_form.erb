<%= search_form_for @q, url: @url do |f| %>
  <div class="input-group">
    <%= f.text_field :content_cont, placeholder: "Enter Search keyword...",
                      class: 'form-control' %>
    <span class="input-group-btn">
     <%= f.submit 'Search', class: "btn btn-primary" %>
    </span>
  </div>
<% end %>